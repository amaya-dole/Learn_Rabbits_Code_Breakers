<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardMaxElevation="1dp"
    app:cardCornerRadius="9dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="#52FFEB3B"
        android:padding="10dp">

        <!--text view for our event name-->
        <TextView
            android:id="@+id/txteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txteDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txteName"
            android:text="Event Description"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txteLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txteDescription"
            android:text="Event Location"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/txtsTime"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txteLocation"
            android:text="Start Time"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txteTime"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txteLocation"
            android:layout_toRightOf="@+id/txtsTime"
            android:text="End Time"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtsTime"
            android:orientation="horizontal">

            <Button
                android:id="@+id/txt_btn_update"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:backgroundTint="#3AB781"
                android:text="UPDATE" />

            <Button
                android:id="@+id/txt_btn_delete"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:text="DELETE"
                app:backgroundTint="#E91E63" />

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>